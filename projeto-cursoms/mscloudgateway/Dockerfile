FROM maven:3.8.5-openjdk-17 as build

WORKDIR /app

COPY . .

RUN mvn clean package -DskipTests

FROM openjdk:17

ARG EUREKAPASS_ARG

ENV EUREKAPASS $EUREKAPASS_ARG

ARG EUREKA_SERVER_ARG

ENV EUREKA_SERVER $EUREKA_SERVER_ARG

ARG KEYCLOAK_SERVER_ARG

ENV KEYCLOAK_SERVER $KEYCLOAK_SERVER_ARG

ARG KEYCLOAK_PORT_ARG

ENV KEYCLOAK_PORT $KEYCLOAK_PORT_ARG

WORKDIR /app

COPY --from=build ./app/target/*.jar ./app.jar

ENTRYPOINT java -jar -Dspring.profiles.active=prod app.jar
